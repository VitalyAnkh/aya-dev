open import relation::binary::path

def coePi (r s : I)
  (A : I -> Type) (B : Fn (i : I) -> A i -> Type)
  (f : Fn (a : A r) -> B r a)
  : Fn (a : A s) -> B s a =>
  fn a =>
    coe r s (fn i => B i (coe s i A a))
      (f (coe s r A a))

def coePiEq (r s : I)
  (A : I -> Type) (B : Fn (i : I) -> A i -> Type)
  (f : Fn (a : A r) -> B r a)
  : coePi r s A B f = coe r s (fn i => Fn (a : A i) -> B i a) f =>
  refl
